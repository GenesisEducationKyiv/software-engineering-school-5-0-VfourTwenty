{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "npm run migrate && node bin/www",
    "migrate": "npx sequelize-cli db:migrate",

    "test:integration": "NODE_ENV=test mocha test/integration --parallel --require test/integration/setup.js --timeout 5000 --exit",
    "test:integration:docker": "docker compose -f docker-compose.test.yml up --build test-integration --abort-on-container-exit",

    "test:e2e": "NODE_ENV=test mocha test/e2e --timeout 7000 --exit",
    "test:e2e:docker": "docker compose -f docker-compose.test.yml up --build test-e2e --abort-on-container-exit",

    "test:unit": "mocha test/unit --require test/unit/setup.js --timeout 5000 --exit",

    "test-docker:integration": "if [ \\\"$NODE_ENV\\\" != \\\"docker_test\\\" ]; then echo '❌ This script is Docker-only'; exit 1; fi && mocha test/integration --require test/integration/setup.js --timeout 5000 --exit",
    "test-docker:e2e": "if [ \"$NODE_ENV\" != \"docker_test\" ]; then echo '❌ This script is Docker-only'; exit 1; fi && mocha test/e2e --timeout 7000 --exit",

    "debug": "node scripts/debug.js",
    "seed": "node scripts/seeder.js"
  },
  "dependencies": {
    "chai": "^4.3.7",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "http-errors": "~1.6.3",
    "mocha": "^11.2.2",
    "morgan": "~1.9.1",
    "node-cron": "^4.0.5",
    "pg": "^8.16.0",
    "pg-hstore": "^2.3.4",
    "proxyquire": "^2.1.3",
    "resend": "^4.5.1",
    "sequelize": "^6.37.7",
    "supertest": "^7.1.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "sequelize-cli": "^6.6.3",
    "sinon": "^20.0.0"
  }
}
